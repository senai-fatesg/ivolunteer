<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

	<application>
        <variable-resolver>com.groundside.jsf.securityresolver.SecurityVariableResolver</variable-resolver>
        <property-resolver>br.com.ambientinformatica.ambientjsf.AmbientElResolver</property-resolver>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
	</application>

 <lifecycle>
 	<phase-listener>br.com.ambientinformatica.ambientjsf.controle.OpenEntityManagerInViewPhaseListenerDelegator</phase-listener>
 </lifecycle>

</faces-config>
